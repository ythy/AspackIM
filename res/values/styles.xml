<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- LoginTextInput. -->
    <style name="AIMEditText"> 
		<item name="android:textSize">15sp</item>
	</style>
	<style name="AIMEditText.LoginText">
	    <item name="android:background">@drawable/textinputlogin_up9</item>		   	    
	</style> 
	<style name="AIMEditText.LoginTextDown">
	    <item name="android:background">@drawable/textinputlogin_down</item>		    
	</style>
	<style name="AIMEditText.zhuce">
	    <item name="android:background">@drawable/zhucetext</item>		    
	</style>
	
	<!-- Button -->
	<style name="AIMButton">
		<item name="android:textSize">16sp</item>		
	</style>
	<style name="AIMButton.Login" >
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/loginbutton</item>
	</style>
	<style name="AIMButton.confirmbtzhuce" >
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/confirmbtn</item>
		<item name="android:textColor">@color/color_white</item>
	</style>
	<style name="AIMButton.messagebutton" >
		<item name="android:background">@drawable/messagebtn</item>
	</style>
	<style name="AIMButton.contactbutton" >
		<item name="android:background">@drawable/contactbtn</item>
	</style>
	<style name="AIMButton.setupbutton" >
		<item name="android:background">@drawable/setupbtn</item>
	</style>
	
	<!-- Text -->
	<style name="AIMTextView"> 
		<item name="android:textSize">14sp</item>
	</style>
	<style name="AIMTextView.white" >
		<item name="android:textColor">@color/color_white</item>
	</style>
	<style name="AIMTextView.title" >
		<item name="android:textColor">@color/color_green</item>
	</style>
	

</resources>
